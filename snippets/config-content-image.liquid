{%- capture banner-style -%}
	{%- if blocks.size > 0 %}
      {%- for block in blocks -%}
        {%- assign id = block.id -%}
        {%- assign type = block.type -%}
        {%- case type -%} 
			{% when 'hd' %}
			.type_banner .laber_banner .banner_text h3#b_{{id}}{
				margin-bottom:{{block.settings.mg_bottom}}px;
                text-transform:{{block.settings.text_transform}}; 
                letter-spacing:{{block.settings.ls_text}}; 
                {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                font-size:{{block.settings.fs_text}}px; 
                color:{{block.settings.color}}; 
                font-weight:{{block.settings.fw_text}};
				
			}
            .type_banner .laber_banner .banner_text h3#b_{{id}} span.first ,
            .type_banner .laber_banner .banner_text h3#b_{{id}} span.marked,
            .type_banner .laber_banner .banner_text h3#b_{{id}} span.last {
              color:{{block.settings.color_mark}}; 
            }
            @media (max-width: 1024px) {
				.type_banner .laber_banner .banner_text h3#b_{{id}}{
					font-size:{{block.settings.mobile_font_text}}px;
					margin-bottom:{{block.settings.mobile_mg_bottom}}px;
				}
          	}
			{% when 'subhd' %}
			.type_banner .laber_banner .banner_text h5#b_{{id}}{
				margin-bottom:{{block.settings.mg_bottom}}px;
				text-transform:{{block.settings.text_transform}}; 
				letter-spacing:{{block.settings.ls_text}};
				{% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
				font-size:{{block.settings.fs_text}}px; 
				color:{{block.settings.color}}; 
				font-weight:{{block.settings.fw_text}};
			}
            .type_banner .laber_banner .banner_text h5#b_{{id}} span.first ,
            .type_banner .laber_banner .banner_text h5#b_{{id}} span.marked,
            .type_banner .laber_banner .banner_text h5#b_{{id}} span.last {
              color:{{block.settings.color_mark}}; 
            }
			@media (max-width: 1024px) {
				.type_banner .laber_banner .banner_text h5#b_{{id}}{
					font-size:{{block.settings.mobile_font_text}}px;
					margin-bottom:{{block.settings.mobile_mg_bottom}}px;
				}
          	}
            {% when 'txt' %}
              .type_banner .laber_banner .banner_text div#b_{{id}} p{
                  margin-bottom:{{block.settings.mg_bottom}}px; 
                  letter-spacing:{{block.settings.ls_text}}; 
				  text-transform:{{block.settings.text_transform}}; 
                  {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                  font-size:{{block.settings.fs_text}}px; 
                  color:{{block.settings.color}}; 
                  font-weight:{{block.settings.fw_text}};
              }
              @media (max-width: 1024px) {
                  .type_banner .laber_banner .banner_text div#b_{{id}} p{
                      font-size:{{block.settings.mobile_font_text}}px;
                      margin-bottom:{{block.settings.mobile_mg_bottom}}px;
                  }
              }
              {% when 'label' %}
			  .type_banner .laber_banner .banner_text div#b_{{id}}.label{
					margin-bottom:{{block.settings.mg_bottom}}px;
				}
              .type_banner .laber_banner .banner_text div#b_{{id}}.label > span{
                background-color: {{block.settings.cl_bg}}; 
                color:{{block.settings.cl_txt}}; 
                font-size:{{block.settings.fs_text}}px; 
                font-weight:{{block.settings.fw_text}};
                text-transform:{{block.settings.button_transform}};
                moz-transition: all .4s ease-in-out;
                -o-transition: all .4s ease-in-out;
                -webkit-transition: all .4s ease-in-out;
                transition: all .4s ease-in-out;
                display: inline-block;
                padding:{{block.settings.pd}};
                height: 25px;
                line-height: 25px;
				border-radius: 2px;
              } 
            @media (max-width: 1024px) {
              .type_banner .laber_banner .banner_text div#b_{{id}}.label{
            	margin-bottom:{{block.settings.mobile_mg_bottom}}px;
              }
            }
            {% when 'btn' %}
              .type_banner .laber_banner .banner_text #b_{{id}}.btn {
                font-size:{{block.settings.fs_text}}px; 
                font-weight:{{block.settings.fw_text}};
                text-transform:{{block.settings.button_transform}};
              }
              .type_banner .laber_banner .banner_text #b_{{id}}.link{
                  color:{{block.settings.cl_txt}}; 
                  font-size:{{block.settings.fs_text}}px; 
                  font-weight:{{block.settings.fw_text}};
                  text-transform:{{block.settings.button_transform}};
                  justify-content: center;
                  pointer-events: auto;
                  position: relative;
              }	
              .type_banner .laber_banner .banner_text #b_{{id}}.link:before {
                  content: "";
                  height: 1px;
                  bottom: 0;
                  left: 0;
                  right: 0;
                  text-transform: capitalize;
                  background-color: {{block.settings.cl_txt}};
                  display: block;
                  position: absolute;
                  -webkit-transition: all .24s linear 0ms;
                  -khtml-transition: all .24s linear 0ms;
                  -moz-transition: all .24s linear 0ms;
                  -ms-transition: all .24s linear 0ms;
                  -o-transition: all .24s linear 0ms;
                  transition: all .24s linear 0ms;
              }
              .type_banner .laber_banner .banner_text #b_{{id}}.link:after {
                  content: "";
                  height: 1px;
                  bottom: 0;
                  left: 100%;
                  right: 0;
                  background-color: {{block.settings.cl_txt_hover}};
                  display: block;
                  position: absolute;
                  opacity: 0;
                  -webkit-transition: all .24s linear 0ms;
                  -khtml-transition: all .24s linear 0ms;
                  -moz-transition: all .24s linear 0ms;
                  -ms-transition: all .24s linear 0ms;
                  -o-transition: all .24s linear 0ms;
                  transition: all .24s linear 0ms;
              }
              .type_banner .laber_banner .banner_text #b_{{id}}.link:hover{
                    color:{{block.settings.cl_txt_hover}}; 
              }
              .type_banner .laber_banner .banner_text #b_{{id}}.link:hover:before {
                  right: 100%;
                  opacity: 0;
              }
              .type_banner .laber_banner .banner_text #b_{{id}}.link:hover:after {
                  left: 0;
                  opacity: 1;
              }
            @media (max-width: 1024px) {
              .type_banner .laber_banner .banner_text #b_{{id}}.btn ,
              .type_banner .laber_banner .banner_text #b_{{id}}.link{
                font-size:{{block.settings.mobile_font_text}}px;
              }
            }	
        {%endcase%}
      {%- endfor -%}
	{%- endif -%}
{%- endcapture -%}

{% style%}
{{ banner-style | strip_newlines | remove:"  "}}
{% endstyle%}