{%- assign design_product = settings.design_product -%}
{%- assign style_product = settings.content_style_product -%}
{%- assign image_border_product = settings.image_border_product -%}
{%- liquid

   assign sett_equal = settings.use_eq_height_product
  assign image_ratio = settings.image_ratio_product
  if sett_equal 
     case image_ratio   
        when 'ratio3_2'
            assign aspect_ratio = 1.5
        when 'ratio4_3'
            assign aspect_ratio = 1.333
        when 'ratio1_1'
            assign aspect_ratio = 1
        when 'ratio3_4'
            assign aspect_ratio = 0.75
        when 'ratio2_3'
            assign aspect_ratio = 0.66667
        when 'ratio1_2'
            assign aspect_ratio = 0.5
     endcase 
  endif
  
-%}
{%- capture style -%}
  {% assign ratio = aspect_ratio | default:product.featured_media.aspect_ratio %}
  --ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;
{%- endcapture -%}
<div class="product-item product-column laber-product-item-{{design_product}}" >
  <div class="product-collection">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-12">
        <div class="product-inner">
          <div class="product-image">
            <a class="db" href="{{ routes.root_url }}admin/products">
              <div class="image-card__img overflow-hidden ratio" style="{{ style }}">
                {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
                {{ 'product-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="content-right col-lg-6 col-md-6 col-12"> 
        <div class="product-collection__content style_{{style_product}}">  

          <div class="product-collection__title">
            <h2 class="name_product">
              <a class="cd" href="{{ routes.root_url }}admin/products">
              	{{ 'homepage.onboarding.product_title' | t }}
              </a>
            </h2>
          </div>
          <div class="frm-price-color">
            <div class="product-collection__price ">
              <span class="price price--sale" data-js-product-price="">
                <span class="current">$56.00</span> <span class="compare">$19.00 </span>
              </span>
            </div>
          </div>
          <div class="short-description">
            <ul>
              <li>Bass and Stereo Sound.</li>
              <li>Display with 3088 x 1440 pixels resolution.</li>
              <li>Memory, Storage &amp; SIM: 12GB RAM, 256GB.</li>
              </ul>
          </div>
          <div class="button-cart-bottom flex">
            <button type="submit" class="add-to-cart">
              <span class="text">Add to cart</span>
            </button>
             
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>