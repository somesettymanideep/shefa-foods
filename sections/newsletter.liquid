{% liquid
  assign sid = section.id 
%}
  <section id="laber_{{sid}}" class="{{ section.settings.design }}"> 
    <div class=" {%if section.settings.layout != 'full-width' %}container {%else%} {{section.settings.layout}}{%endif%} text_{{ section.settings.position }}">

      <aside class="laber_mail">
        {% if section.settings.title  %}
  		<div class="wrap_title {{ section.settings.text_size }}">
          {% if section.settings.subtitle != blank %}<div class="h3 section-subtitle alo-text-transform alo-color" style="--alo-color:{{ section.settings.cl_subtitle }};--alo-text-transform:{{ section.settings.text_transform }}">{{section.settings.subtitle}}</div>{% endif %}    
  		  <h3 class="section-title alo-text-transform alo-color" style="--alo-color:{{ section.settings.cl_title }};--alo-text-transform:{{ section.settings.text_transform }}">{{section.settings.title}}</h3>  
          {% if section.settings.content!= blank %}
            <div class="content alo-color" style="--alo-color:{{ section.settings.cl_content }};">{{section.settings.content}}</div>
          {% endif %}	
        </div>
        {% endif %}
          <div class="newsletter">                                   	
            {%- form 'customer', class:'newsletter-form-footer' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="mc4wp-form-fields">
              <div class="signup-newsletter-form  {{class}}">
                <div class="col pd-0">
                  <div class="i-email">
                    <input type="email" name="contact[email]" placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"  value="{% if customer %}{{ customer.email }}{% endif %}" class="{{class_ip}} input-text alo-border-color" required="required" style="--alo-border-color:{{ section.settings.cl_border }};">
                  </div>
                </div>
                 <div class="col-auto pd-0">
                  <button type="submit" class="submit-btn truncate{% if settings.checkbox_mail %} mail_agree pr{% endif %}" aria-label="submit">
                      <span>{{ 'general.newsletter_form.submit' | t }} </span>
                  </button>
                </div>
              </div>
            </div>
            
            {%- if form.posted_successfully? -%}
              <div class="mc4wp-response">  
                <div class="shopify-message"><i class="las la-check"></i>{{ 'general.newsletter_form.confirmation' | t }}</div>
              </div>
            {%- elsif form.errors -%}
              <div class="mc4wp-response"> 
                <div class="shopify-error"><i class="las la-exclamation-triangle"></i>{{ form.errors | default_errors }}</div>
              </div>
            {%- endif -%}
            
            {%- endform -%}								
           </div> 	
      </aside>
    </div>
</section>
{%style%}

@media (min-width: 1024px){

  #laber_{{sid}} .laber_mail{
    width: {{section.settings.width_c}}%;
  }
  
}
{%endstyle%}
{%- render 'section_style' -%}

