{% liquid
  assign sid = section.id 
  assign se_blocks = section.blocks
  assign se_size = se_blocks.size
  assign layout = section.settings.layout
  assign num_p_qty =  section.settings.num_p_qty
  
%}
  
{%- for i in (1..1) -%}  
<section id="laber_{{sid}}" class="cat_size_{{se_size}} pad-{{ section.settings.pad }}" style="{% if section.settings.custom_width %}--alo-container-width:{{section.settings.container_width}}px;{% endif %}">
  <div class="container {%if layout == 'full-width' %}{{layout}}{%endif%}" >   
        {% if section.settings.title != blank %}
          <div class="wrap_title {{ section.settings.text_size }}">
            <div class="h3 section-title alo-text-transform" style="--alo-text-transform:{{ section.settings.text_transform }}">{{section.settings.title}}</div>  
          </div>
        {% endif %}
    <div class="row">
            {%- case se_size -%}
    			{%- when 1 -%}
            		<article class="cate-item col-lg-6 col-md-6 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article>
               {%- when 2 -%}
            		<article class="cate-item col-lg-6 col-md-6 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article> 
                  <article class="cate-item col-lg-6 col-md-6 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[1],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article> 
                {%- when 3 -%}
            		<article class="cate-item col-lg-4 col-md-4 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article> 
                  <article class="cate-item col-lg-4 col-md-4 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[1],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article>
                  <article class="cate-item col-lg-4 col-md-4 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[3],num_p_qty:num_p_qty,for_i:se_size -%}
                  </article>
                {%- when 4 -%}
            		<article class="cate-item col-lg-6 col-md-6 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
                    </article> 
                    <article class="cate-item col-lg-6 col-md-6 col-12"> 
                      <div class="row">
                          <div class="col-lg-6 col-md-6 col-12">
                            {%- render 'collection-featured-item',block:se_blocks[1],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                          <div class="col-lg-6 col-md-6 col-12">
                            {%- render 'collection-featured-item',block:se_blocks[2],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                          <div class="col-12">
                              {%- render 'collection-featured-item',block:se_blocks[3],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                      </div>
                    </article>
              {%- when 5 -%}
                  <article class="cate-item col-lg-5 col-md-5 col-12"> 
                    {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
                    </article> 
                    <article class="cate-item col-lg-7 col-md-7 col-12"> 
                      <div class="row">
                          <div class="col-lg-7 col-md-7 col-12">
                            {%- render 'collection-featured-item',block:se_blocks[1],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                          <div class="col-lg-5 col-md-5 col-12">
                            {%- render 'collection-featured-item',block:se_blocks[2],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                          <div class="col-lg-5 col-md-5 col-12">
                              {%- render 'collection-featured-item',block:se_blocks[3],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                          <div class="col-lg-7 col-md-7 col-12">
                            {%- render 'collection-featured-item',block:se_blocks[4],num_p_qty:num_p_qty,for_i:se_size -%}
                          </div>
                      </div>
                    </article>
              {%- when 6 -%}
            <article class="cate-item col-lg-3 col-md-6 col-12"> 
            {%- render 'collection-featured-item',block:se_blocks[0],num_p_qty:num_p_qty,for_i:se_size -%}
              {%- render 'collection-featured-item',block:se_blocks[1],num_p_qty:num_p_qty,for_i:se_size -%}
            </article> 
            <article class="cate-item col-lg-3 col-md-6 col-12"> 
            {%- render 'collection-featured-item',block:se_blocks[2],num_p_qty:num_p_qty,for_i:se_size -%}
              
            </article> 
            <article class="cate-item col-lg-3 col-md-6 col-12"> 
            {%- render 'collection-featured-item',block:se_blocks[3],num_p_qty:num_p_qty,for_i:se_size -%}
              {%- render 'collection-featured-item',block:se_blocks[4],num_p_qty:num_p_qty,for_i:se_size -%}
            </article> 
            <article class="cate-item col-lg-3 col-md-6 col-12"> 
            {%- render 'collection-featured-item',block:se_blocks[5],num_p_qty:num_p_qty,for_i:se_size -%}
            </article> 
           {%- endcase -%}
    </div>
  </div>
</section>
{%- render 'section_style' -%}
{%- endfor -%}


{%- schema -%}
  {
    "name": "Collection featured grid",
    "class": "collection_grid cms_section type_collection_grid",
    "max_blocks": 6,
    "settings": [
      {
        "type": "header",
        "content": "== Title Settings"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "text_size",
        "default": "medium",
        "options": [
          {
            "value": "small",
            "label": "small"
         },
         {
            "value": "medium",
            "label": "Medium"
         },
         {
            "value": "large",
            "label": "Large"
          }
        ],
        "label": "Text size"
      },
      {
              "type": "select",
              "id": "text_transform",
              "default": "none",
              "options": [
               {
                  "value": "none",
                  "label": "None"
               },
               {
                  "value": "capitalize",
                  "label": "Capitalize"
               },
               {
                  "value": "lowercase",
                  "label": "Lowercase"
               },
               {
                  "value": "uppercase",
                  "label": "Uppercase"
                }
              ],
              "label": "Text transform:"
            },

      {
          "type": "range",
          "id": "border",
          "label": "Border",
          "default": 0,
          "min": 0,
          "max": 30,
          "step": 1,
          "unit": "px"
          },
      {
        "type": "checkbox",
        "id": "num_p_qty",
        "label": "Quantity of products",
        "default": false
      },
      {
        "type": "header",
        "content": "== Design Options"
      }, 
          {
        "type": "checkbox",
        "id": "custom_width",
        "label":"Custom width",
        "default": false
      },
      {
          "type": "range",  
          "id": "container_width",  
          "label": "Container width",
          "min": 1200,
          "max": 1900,
          "step": 10,
          "unit": "px",
          "default": 1200 
      },
      {
        "type": "select",
        "id": "layout",
        "default": "container",
        "options": [
         {
            "value": "container",
            "label": "Container"
         },
         {
            "value": "full-width",
            "label": "Full Width"
          }
        ],
        "label": "Layout"
      },
      {
        "type": "color",
        "id": "cl_bg",
        "label": "Background color",
        "default": "#fff"
      },
	  {
        "type": "text",
        "id": "mg",
        "label": "Margin",
        "info":"Margin top, margin right, margin bottom, margin left. If you not use to blank"
      },
      {
        "type": "text",
        "id": "pd",
        "label": "Padding",
        "info":"Padding top, padding right, padding bottom, padding left. If you not use to blank"
      },
      {
        "type": "header",
        "content": "== Design Mobile Options"
      },
      {
        "type": "text",
        "id": "mg_mb",
        "label": "Margin"
      },
      {
        "type": "text",
        "id": "pd_mb",
        "label": "Padding"
      }
	
    ],
    "blocks": [
      
	{
    "type": "collection",
    "name": "Collection",
    "settings": [
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
         "type": "image_picker",
         "id": "image",
         "label": "Image",
		 "info":"Dimension: 600px x 360px"
       },     
      {
        "type": "text",
        "id": "title",
        "label": "Title block (optional)",
        "info": "Leave empty to use 'collection title' title."
      },
          {
          "type": "range",
          "id": "mg_bottom",
          "label": "Margin bottom",
          "default": 20,
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "px"
          }
      ]
    }
],
    "presets": [
      {
        "name": "Collection featured grid",
        "category": "Collections",
        "blocks": [
          { "type": "collection" },{ "type": "collection" },{ "type": "collection" }, { "type": "collection" },{ "type": "collection" },{ "type": "collection" }
          
        ]
      }
    ]
  }
{% endschema %}