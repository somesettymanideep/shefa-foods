{% include 'product-res-variables' %}
{% assign sid = section.id %}
{% assign layout = section.settings.layout %}
{%- assign show_size_guide = settings.product_info_show_size_guide -%}
{%- assign show_delivery = settings.product_info_show_delivery_return -%}
{%- assign show_options = 1 -%}
{% assign current_variant = product.selected_or_first_available_variant %}
{% assign price = current_variant.price %}
{%- assign product_page_design = settings.product_page_design -%}
{% if product_page_design == 'grid_1_column' %}
  {%- assign stickySidebar = true -%}
{% elsif product_page_design == 'grid_2_column' %}
  {%- assign stickySidebar = true -%}
{% else %}
  {%- assign stickySidebar = false -%}
{% endif %}
{%- assign nb_thumb = settings.nb_thumb -%}
{%- assign width_zoom = settings.width_zoom -%}
{%- assign height_zoom = settings.height_zoom -%}
{% assign build_variant = 'all' %}
{% assign mediaDawn = false %}
{%- liquid
 assign sett_equal = settings.use_eq_height_product
  assign image_ratio = settings.image_ratio_product
  if sett_equal 
     case image_ratio   
        when 'ratio2_1'
            assign aspect_ratio = 2.0
        when 'ratio3_2'
            assign aspect_ratio = 1.5
        when 'ratio4_3'
            assign aspect_ratio = 1.333
        when 'ratio1_1'
            assign aspect_ratio = 1.0
        when 'ratio3_4'
            assign aspect_ratio = 0.75
        when 'ratio2_3'
            assign aspect_ratio = 0.66667
        when 'ratio1_2'
            assign aspect_ratio = 0.5
     endcase 
  endif
  
-%}
{%- capture style -%}
  {% assign ratio = aspect_ratio | default:product.featured_media.aspect_ratio %}
  --ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;
{%- endcapture -%}
<section>
  <div itemscope itemtype="http://schema.org/Product">
    <meta itemprop="name" content="{{ product.title }}">
    <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
    <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">
    <div class="main-content shop-page main-content-detail">
      <div id="laber_{{sid}}" class="main-product" style="border-radius:{{ section.settings.bd }}px; border:1px solid {{ section.settings.cl_border}} ">
        <div class="content-offset {{ product_page_design }}">
          <div class="js_product_single" id="product-single" data-js-product>
            <script class="data-json-product" type="application/json">
              {% render 'product-get-attributes', product:product, build_variant: 'json' %}
            </script>
            <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
            {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
            {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
            {%- if first_3d_model -%}
              {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
              <link
                id="ModelViewerStyle"
                rel="stylesheet"
                href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
                media="print"
                onload="this.media='all'"
              >
              <link
                id="ModelViewerOverride"
                rel="stylesheet"
                href="{{ 'component-model-viewer-ui.css' | asset_url }}"
                media="print"
                onload="this.media='all'"
              >
            {%- endif -%}
            <div class="row">
              {%- if mediaDawn -%}
                {% render 'product-media-modal', variant_images: variant_images %}
              {%- else -%}
                {% include 'product-media-gallery' %}
              {%- endif -%}
              <div
                {% if stickySidebar %}
                  id="js-stickySidebar"
                {% endif %}
                class="details-info col-xs-12 col-sm-12 {% if product_page_design =='grid_2_column' %} col-md-5 col-lg-5{% else %} col-md-6 col-lg-6{% endif %}"
              >
                {% if stickySidebar %}<div class="js-sticky-sidebar">{% endif %}

                <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                  <meta itemprop="url" content="{{ url }}">
                  <meta itemprop="sku" content="{{ sku }}">
                  <meta itemprop="priceCurrency" content="{{ shop.currency }}">
                  <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
                  <link
                    itemprop="availability"
                    href="http://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}"
                  >
                  {%- assign product_form_id = 'product-form-' | append: section.id -%}
                  
                  {%- form 'product',
                    product,
                    id: product_form_id,
                    class: 'form',
                    novalidate: 'novalidate',
                    data-type: 'add-to-cart-form'
                  -%}
                    <input type="hidden" name="id" value="{{ current_variant.id }}" data-js-product-variant-input>
                    {{ form | payment_terms }}
                    {%- for block in section.blocks -%}
                      {%- case block.type -%}
                        {%- when '@app' -%}
                          {% render block %}
                        {%- when 'name_product' -%}
                          <h1 class="product-name">{{ product.title }}</h1>
                          {% style %}
                            .details-info .product-name{
                              text-transform:{{block.settings.np_text_transform}};
                              margin-top:{{block.settings.np_mg_top}}px;
                              margin-bottom:{{block.settings.np_mg_bottom}}px;
                              font-size: {{block.settings.np_size}}px;
                              font-weight:{{block.settings.np_weight}};
                            }
                            @media (max-width: 767px) {
                              .details-info .product-name{
                              font-size: {{block.settings.np_size_mobile}}px
                              }
                            }
                          {% endstyle %}
                        {%- when 'show_reviews' -%}
