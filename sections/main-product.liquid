                                  </svg>
                                {{ 'products.product.same_day_sales_html' | t: counter: product_sold_html, time: product_hour_html }}
                                </div>
                              </div>                
                              {% endcapture %}
                        {% if block.settings. use-reviews or block.settings.use-sold-product %}
                          <div class="star-rating">
                            <!-- Start of Judge.me code --> 
                              <div style='{{ jm_style }}' class='jdgm-widget jdgm-preview-badge'  data-id='{{ product.id }}'>
                              {{- product.metafields.judgeme.badge -}}
                              </div>  
                              <!-- End of Judge.me code -->
                            

                            {% if block.settings.use-sold-product %}
                            {{ same_day_sales_html }}  
                            {% endif %}
                          </div>
                          {% endif %}
                        {%- when 'name_category' -%}
                        {%- when 'show_price' -%}
                          <div class="product-price">
                            {%- if current_variant.compare_at_price > price -%}
                              <span class="price price--sale" data-js-product-price>
                                <span id="js-product-price" class="current">{{ price | money }}</span>
                                <span class="compare">{{ current_variant.compare_at_price | money }}</span>
                              </span>
                            {%- else -%}
                              <span id="js-product-price" class="price" data-js-product-price>{{ price | money }}</span>
                            {%- endif -%}
                            <p class="price-sale-details" data-js-product-price-sale-details>
                              {%- if current_variant.compare_at_price > price -%}
                                {%- assign saveMoney = current_variant.compare_at_price | minus: price | money -%}
                                {%- assign savingsPercent = current_variant.compare_at_price
                                  | minus: current_variant.price
                                  | times: 100.0
                                  | divided_by: current_variant.compare_at_price
                                  | round
                                -%}
                                {{
                                  'products.product.price_sale_details_html'
                                  | t: price: saveMoney, procent: savingsPercent
                                }}
                              {%- endif -%}
                            </p>
                          </div>

                        {%- when 'show_description' -%}
                          <div class="product_description clearfix">
                            {{ block.settings.custom_liquid }}
                          </div>
                        {%- when 'text_countdown_html' -%}
                          <div class="text_countdown_html">
                            {% capture text_countdown_html %}             
                              <div class="product-page-info__text-countdown clearfix">
                                <div class="text-countdown js-text-countdown" data-reset-time="7" data-delivery-time="3" data-delivery-format="Day DD/MM/YYYY" data-delivery-excludes="Saturday, Sunday">
                                  {% capture text_countdown_counter_html %}<span class="text-countdown__counter" data-js-text-countdown-counter></span>{% endcapture %}
                                  {% capture text_countdown_delivery_html %}<span class="text-underline" data-js-text-countdown-delivery></span>{% endcapture %}
                                  {{ 'products.product.text_countdown_html' | t: counter: text_countdown_counter_html, delivery: text_countdown_delivery_html }}
                                </div>
                              </div>             
                              {% endcapture %}
                            {% capture visitors_html %}               
                              <div class="product-page-info__visitors clearfix">
                                <div class="visitors js-visitors" data-min="10" data-max="25" data-interval-min="2" data-interval-max="6" data-stroke="4">
                                  {%- assign visitors_random_diff = block.settings.product_visitors_max | minus: block.settings.product_visitors_min -%}
                                  
                                  {%- assign visitors_random = "now" | date: "%N" | modulo: visitors_random_diff | plus: block.settings.product_visitors_min -%}
                                  
                                  {% capture visitors_counter_html %}
                                  	<span class="visitors__counter d-inline-block px-8" data-js-counter>{{ visitors_random }}</span>
                                  {% endcapture %}
                                  <i class="icon-eye"></i> {{ 'products.product.visitors_html' | t: counter: visitors_counter_html }}
                                </div>
                              </div>                
                              {% endcapture %}
                            {% assign show_text_countdown = block.settings.show_text_countdown %}
                            {% assign show_visitors_html = block.settings.show_visitors_html %}
                            {% if show_text_countdown %}{{ text_countdown_html }}{% endif %}
                            {% if show_visitors_html %}{{ visitors_html }}{% endif %}
                            
                          </div>
                        {%- when 'product_infor' -%}
                          <div class="product_infor">
                            {%- if block.settings.show_availability -%}
                              <div class="pr-availability clearfix">
                                <p>
                                  <label class="label">{{ 'products.product.availability' | t }}:</label>
                                  <span
                                    style="color:{{block.settings.color_in_stock}}"
                                    class="available {% if product.available %}  {% else %} d-none {% endif %}"
                                    id="js-pr-available"
                                  >
                                    {{- 'products.product.available' | t -}}
                                  </span>
                                  <span
                                    style="color:{{block.settings.color_out_stock}}"
                                    class="unavailable {% if product.available %}d-none{% endif %}"
                                    id="js-pr-unavailable"
                                  >
                                    {{ 'products.product.unavailable' | t -}}
                                  </span>
                                </p>
                              </div>
                            {% endif %}

                            {%- if block.settings.show_sku -%}
                              {% if sku != blank %}
                                <div class="product-collection__sku">
                                  <p data-js-product-sku>
                                    <label class="label">{{ 'products.product.sku' | t }}:</label>
                                    <span>{{ sku }}</span>
                                  </p>
                                </div>
                              {% endif %}
                            {% endif %}

                            {%- if block.settings.show_barcode -%}
                              <div class="product-collection__barcode{% if barcode == blank %} d-none{% endif %}">
                                <p data-js-product-barcode>
                                  <label class="label">{{ 'products.product.barcode' | t }}:</label>
                                  <span>{{ barcode }}</span>
                                </p>
                              </div>
                            {% endif %}
                            {%- if block.settings.show_type -%}
                              <div class="product-collection__type{% if type == blank %} d-none{% endif %}">
                                <p data-js-product-type>
                                  <label class="label">{{ 'products.product.type' | t }}:</label>
                                  <span>{{ type }}</span>
                                </p>
                              </div>
                            {% endif %}
                            {%- if block.settings.show_vendor -%}
                              <div class="product-collection__vendor{% if vendor == blank %} d-none{% endif %}">
                                <p data-js-product-vendor>
                                  <label class="label">{{ 'products.product.vendor' | t }}:</label>
                                  <span>{{ vendor | link_to_vendor }}</span>
                                </p>
                              </div>
                            {% endif %}
                            {%- if block.settings.show_category -%}
                              <div class="name_category">
                                <div class="name_collection" data-js-product-collection>
                                  <label class="label">{{ 'products.product.Categories' | t }}:</label>
                                  <p>
                                    {%- if product.collections.size > 0 -%}
                                      {%- for collection in product.collections limit: block.settings.limit_cate -%}
                                        <a class="collection_item" href="{{ collection.url }}">
                                          {{ collection.title -}}
                                          {%- if forloop.last != true %},{% endif %}
                                        </a>
                                        {%- if forloop.last != true %} {% endif %}
                                      {%- endfor -%}
                                    {%- endif -%}
                                  </p>
                                </div>
                              </div>
                            {% endif %}

                            {%- if block.settings.show_tags -%}
                              {% if product.tags %}
                                <div class="tags_product clearfix">
                                  <div class="tags" data-js-product-tags>
                                    <label class="label">{{ 'products.product.tags' | t }}:</label>
                                    <p>
                                      {%- for tags in product.tags limit: block.settings.limit_tags -%}
                                        <a
                                          href="{{ routes.root_url }}collections/all/{{ tags | replace: " ", "-"}}"
                                          title="{{ tags}}"
                                        >
                                          <span>
                                            {{ tags }}
                                          </span>
                                        </a>
                                      {%- endfor -%}
                                    </p>
                                  </div>
                                </div>
                              {% endif %}
                            {% endif %}
                          </div>
                        {%- when 'message' -%}
                          {% render 'product-properties-message', section: section block:block %}
                        {%- when 'file' -%}
                          {% render 'product-properties-file', section: section block:block %} 
                        {%- when 'product_variants' -%}
                          {% assign show_title_variant = block.settings.show_title %}
                          {% assign variants_type = block.settings.variants_type | plus: 0 %}
                          {% assign variantCount = product.variants | size %}
                          {% if variantCount > 1 %}
                            <div class="product-collection__options {{ variantCount }}">
                              {% include 'product-get-options', show_title_variant: show_title_variant %}
                            </div>
                          {% endif %}
                        {%- when 'quantity_button' -%}
                          {% assign url_affiliate = product.metafields.custom.external_affiliate %}
                          {%- assign qt_show_wishlist = block.settings.qt_show_wishlist -%}
                          {%- assign qt_show_compare = block.settings.qt_show_compare -%}
                          {%- assign show_social_sharing = block.settings.show_social_sharing -%}
                          {%- assign qt_show_cart = block.settings.qt_show_cart -%}
                          {%- assign show_popup = block.settings.show_popup -%}
                          {%- assign product_terms_conditions_page_content = pages[block.settings.product_terms_conditions_page_content].content -%}
                          {%- assign qt_buy_it_now = block.settings.qt_buy_it_now -%}
                          {%- assign qt_show_quantity = block.settings.qt_show_quantity -%}
                          {%- assign icon_button_cart = block.settings.icon_button_cart -%}
                          {%- assign show_custom_color_btn = block.settings.show_custom_color_btn -%}
                          {%- assign inventory_quantity = product.variants.first.inventory_quantity -%}
                          {% if url_affiliate %}
                            <a
                              href="{{ url_affiliate }}"
                              rel="nofollow"
                              target="_blank"
                              class="btn product-affiliate relative  w-full mb-20"
                            >
                              {{- block.settings.btn_affiliate -}}
                            </a>
                          {% else %}
                            <div data-product-meta class="cms-product-meta clearfix">
                              {% if qt_show_quantity %}
                                <div
                                  data-product-quantity
                                  class="js-quantity quantity {% if product.selected_or_first_available_variant.available == false %}d-none-important{% endif %}"
                                >
                                  <label class="d-none">{{ 'products.product.quantity' | t }}</label>
                                  <div class="group-quantity-button">
                                    <a class="js_minus" href="#">
                                      <i class=" icon-minus"></i>
                                    </a>
                                    <input
                                      id="Quantity"
                                      data-step="1"
                                      data-min="1"
                                      {% if product.selected_or_first_available_variant.quantity_rule.max != null %}
                                        data-max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                                        max="{{ product.selected_or_first_available_variant.quantity_rule.max }}"
                                      {% endif %}
                                      class="input-text js_qty"
                                      type="text"
                                      size="4"
                                      title="Qty"
                                      value="01"
                                      name="quantity"
                                    >
                                    <a class="js_plus" href="#">
                                      <i class=" icon-plus"></i>
                                    </a>
                                  </div>
                                </div>
                              {% endif %}
                              <div class="group-button">
                                <div class="inner">
                                  {% if qt_show_cart %}
                                    <button
                                      type="submit"
