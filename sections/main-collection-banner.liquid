{% assign id = section.id  %}
{%- assign assign h_des = section.settings.h_des -%}
{%- assign assign h_tb = section.settings.h_tb -%}
{%- assign assign h_mb = section.settings.h_mb -%}
{% assign show_full_width = section.settings.show_full_width %}
{% assign sub_collection = collection.metafields.custom.sub_collection %}
<section id="laber_{{id}}" style="--alo-container-width:{{ section.settings.custom_width }}px;">
<div class="container{%if show_full_width%} full-width{%endif%}">
<div class="collection-hero{% if section.settings.show_collection_image and collection.image %} collection-hero--with-image{% endif %}">
  <div class="collection-hero__inner page-width">
    <div class="collection-hero__text-wrapper">
      {%- if section.settings.show_collection_image and collection.image -%}
      {% assign image = collection.image %}
      <div class="collection-hero__image-container relative" style="--alo-height-pc:{{ h_des }}; --alo-height-tb:{{ h_tb }};--alo-height-mb:{{ h_mb }}">
          {% render 'banner-image', image: image, image_class: 'w-full h-full' %}
      </div>
      {%- endif -%}
      
       {%- if section.settings.show_collection_description -%}
          <div class="collection-hero__description rte" style="
         {% if section.settings.show_collection_image and collection.image %}--color-title:{{ section.settings.cl_title }};--color-desc:{{ section.settings.cl_desc }} {% else %}--color-title:{{ section.settings.cl_title_on }};--color-desc:{{ section.settings.cl_desc_on }}{% endif %}">
            {%- if collection.title != blank -%}
              <h2 class="collection-hero__title">
                <span>{{- collection.title | escape -}}</span>
              </h2>
            {%- endif -%}
            {%- if collection.description != blank -%}
              <div class="collection-description">{{ collection.description }}</div>
            {%- endif -%}
          </div>
        {%- endif -%}
    </div>
  </div>
</div>
</div>
</section>
{%- render 'section_style' -%}
{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
    "type": "checkbox",
    "id": "show_full_width",
    "default": false,
    "label": "t:sections.main-collection-banner.settings.show_full_width.label"
    },
    {  
        "type": "range",  
        "id": "custom_width",  
        "label": "Custom width",
        "min": 1200,
        "max": 1800,
        "step": 10,
        "unit": "px",
        "default": 1410 
    }, 
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
    "type": "color",
    "id": "cl_title",
    "label": "Color title",
    "default": "#fff"
    },
    {
    "type": "color",
    "id": "cl_desc",
    "label": "Color Description",
    "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label",
      "info": "t:sections.main-collection-banner.settings.show_collection_image.info"
    },
    {
    "type": "color",
    "id": "cl_title_on",
    "label": "Color title",
     "info": "The color of the collection name is on the image" ,
    "default": "#222"
    },
    {
    "type": "color",
    "id": "cl_desc_on",
    "label": "Color Description",
     "info": "The color of the Description name is on the image" , 
    "default": "#222"
    },
    {
        "type": "text",
        "id": "h_des",
        "label": "Desktop Large",
        "placeholder": "150px",
        "default": "150px"
      },
      {
        "type": "text",
        "id": "h_tb",
        "label": "Tablet (<= 1024px)",
        "placeholder": "100px",
        "default": "100px"
      },
      {
        "type": "text",
        "id": "h_mb",
        "label": "Mobile (<= 767px)",
        "placeholder": "150px",
        "default": "150px"
      },
    {
    "type": "color",
    "id": "cl_bg",
    "label": "Background color",
    "default": "#fff"
    },

    {
    "type": "header",
    "content": "== Setting PC",
    "info":"Margin"
    },	
    {
    "type": "text",
    "id": "mg",
    "label": "Margin",
    "info":"Margin top, margin right, margin bottom, margin left. If you not use to blank"
    },
    {
    "type": "text",
    "id": "pd",
    "label": "Padding",
    "info":"Padding top, padding right, padding bottom, padding left. If you not use to blank"
    },
    {
    "type": "header",
    "content": "== Design Mobile Options"
    },
    {
    "type": "text",
    "id": "mg_mb",
    "label": "Margin"
    },
    {
    "type": "text",
    "id": "pd_mb",
    "label": "Padding"
    }
  ]
}
{% endschema %}
